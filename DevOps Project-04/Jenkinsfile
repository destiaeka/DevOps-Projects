// ================= GLOBAL VARIABLES =================
def registry = 'https://satishk.jfrog.io'
def imageName = 'satishk.jfrog.io/satish-docker-local/sample_app'
def version   = '2.1.2'
def projectFolder = 'DevOps Project-04'   // folder pom.xml

pipeline {
    agent {
        node {
            label 'maven'
        }
    }

    environment {
        PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Debug Workspace') {
            steps {
                sh '''
                echo "===== WORKSPACE ====="
                pwd
                ls -lah
                '''
            }
        }

        stage('Build') {
            steps {
                dir(projectFolder) {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Unit Test') {
            steps {
                dir(projectFolder) {
                    sh 'mvn test'
                }
            }
        }

        stage('SonarCloud Analysis') {
            steps {
                dir(projectFolder) {
                    withSonarQubeEnv('SonarCloud') {
                        sh '''
                        mvn sonar:sonar \
                          -Dsonar.projectKey=destiaeka_DevOps-Projects \
                          -Dsonar.organization=destiaeka \
                          -Dsonar.host.url=https://sonarcloud.io
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 30, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Jar Publish') {
            steps {
                script {
                    def server = Artifactory.newServer(
                        url: registry + "/artifactory",
                        credentialsId: "jfrog_cred"
                    )

                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "${projectFolder}/target/*.jar",
                                "target": "maven-libs-release-local/",
                                "flat": "true"
                            }
                        ]
                    }"""

                    def buildInfo = server.upload(uploadSpec)
                    server.publishBuildInfo(buildInfo)
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    dir(projectFolder) {
                        app = docker.build("${imageName}:${version}")
                    }
                }
            }
        }

        stage('Docker Publish') {
            steps {
                script {
                    docker.withRegistry(registry, 'jfrog_cred') {
                        app.push(version)
                    }
                }
            }
        }

        stage('Helm Deploy') {
            steps {
                sh '''
                helm upgrade --install sample-app sample-app-1.0.1
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline SUCCESS'
        }
        failure {
            echo '❌ Pipeline FAILED'
        }
    }
}
